background_color = #e95814
action_link_color = #696969

@import 'isotope'

#gignal-widget
  background-color: background_color

  .gignal-outerbox
    display: inline-block
    background-color: #fff
    margin: 5px

    a
      color: action_link_color
      text-decoration: none

    img
      border: none

    .gignal-text
      margin: 0
      border-bottom: 2px solid background_color
      padding: 10px
      word-wrap: break-word
      max-height: 200px
      overflow: hidden
      color: background_color
    
    .gignal-box-footer
      height: 18px
      display: inline-block
      padding: 10px
      line-height: 18px
      font-size: 13px
      font-weight: normal
      color: action_link_color
    
      img
        margin-right: 5px
    
      .gignal-avatar
        max-width: 18px
        max-height: 18px

  .gignal-imagebox
    height: 185px
    background-size: cover
  
    .gignal-box-footer
      margin-top: 145px


  #gignal-footer
    position: fixed
    left: 0px
    bottom: 0px
    width: 100%
    height: 88px
    background-color: #000

    img
      position: relative
      top: 23px
      height: 46px
      display: block
      margin: 0 auto
      border: none
