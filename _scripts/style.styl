background_color = #fff
action_link_color = #666
text_color = #333
border_color = #DDDDDD
box_shadow = 0 0 0 1px border_color

@import 'index'
@import 'isotope'

#gignal-stream

  .pull-left
    float: left
  .pull-right
    float: right

  .lcase
    text-transform: lowercase

  a, img
    border: none

  #gignal-widget
    background-color background_color
    font-family Arial, sans-serif
    display block
    margin auto

    .gignal-outerbox
      display: inline-block
      background-color: #fff
      margin: 5px
      -webkit-box-shadow: box_shadow
      -moz-box-shadow: box_shadow
      box-shadow: box_shadow

      a
        color: action_link_color
        text-decoration: none

        &:hover
          text-decoration: underline

      img
        border: none

      hr
        border: 0
        height: 1px
        background: background_color
        margin-bottom: 0

      .gignal-unibox
        position: relative
        padding: 10px
        word-wrap: break-word
        // max-height: 200px
        overflow: hidden
        color: text_color
        text-align: center

        .gignal-image
          // height: 185px
          height: 10em
          background-size: cover
          background-position: center center
          cursor: pointer

        .gignal-image-loading
          background-image: url('../../gignal/images/g.png')
          opacity: .10

        .message
          font-family Arial, sans-serif;
          // max-height 200px
          margin 5px 5px 0

        .gignal-box-footer
          margin-top: 145px


      .gignal-toolbox
        display block
        height 28px
        background-color #f6f6f6
        border-top 1px solid border_color
        span
          display inline-block
          vertical-align top
          height 100%
          float left
        .gignal-service
          // width 78px
          width 60px
          a
            text-decoration none
            p
              margin 0
              color #fff
              font-family arial,sans serif
              font-size 0.7em
              font-weight normal
              letter-spacing 0.06em
              line-height 2.5em
              text-align center
              text-transform lowercase
        .gignal-service
          background-color #B1B2B3
        .gignal-service:hover
          background-color #404040

        .gignal-tool
          border-left 1px solid border_color
          p
            left 12px
            position absolute
            display block
            top -24px
            height 15px
            width 15px
            -webkit-transform:rotate(45deg)
            -moz-transform:rotate(45deg)
            transform:rotate(45deg)
            background-color #f6f6f6
            border-bottom 1px solid border_color
            border-right 1px solid border_color
          ul
            margin 0
            padding 0
            li
              display inline-block
              position relative
              cursor pointer
              width 20px
              height 28px
              margin-left 7px
              .gignal-contener
                display none
                background-color #f6f6f6
                -webkit-box-shadow: 0 0 0 1px border_color
                -moz-box-shadow: 0 0 0 1px border_color
                box-shadow: 0 0 0 1px border_color
              p
                position absolute
                display none
                top -24px
                height 15px
                width 15px
                -webkit-transform:rotate(45deg)
                -moz-transform:rotate(45deg)
                transform:rotate(45deg)
                background-color #f6f6f6
                border-bottom 1px solid border_color
                border-right 1px solid border_color
            .like
              background-position -9px 0
              margin-left: 9px;
              p
                left 3px
              .gignal-contener
                position absolute
                height 19px
                width 217px
                padding 8px 12px
                left -88px
                top -36px
            .retweet
              background-position -41px 0
              p
                left 2px
              span
                position absolute
                height 19px
                width 221px
                padding 8px 10px
                left -119px
                top -36px
                a
                  background-size 14px 11px
                  background-position 0 2px
                  background-repeat no-repeat
                  padding-left 20px
                  font-size 0.8em
                  text-decoration none
                a:hover
                  color #00aced
            .reply
              background-position -71px 0
              p
                left 0px
              span
                position absolute
                height 19px
                width 221px
                padding 8px 10px
                left -151px
                top -36px
                a
                  background-size 14px 11px
                  background-position 0 2px
                  background-repeat no-repeat
                  padding-left 20px
                  font-size 0.8em
                  text-decoration none
                a:hover
                  color #00aced
            .post
              background-position -100px 0
              p
                left 2px
              span
                position absolute
                height 19px
                width 221px
                padding 8px 10px
                left -119px
                top -36px
                a
                  background-repeat no-repeat
                  padding-left 20px
                  font-size 0.8em
                  text-decoration none
                .Facebook
                  cursor pointer
                  background-size 9px 16px
                  background-position 3px -1px
                  background-color transparent
                .Facebook:hover
                  color #3b5998
            .share
              background-position -134px 0
              p
                left -1px
              span
                position absolute
                height 19px
                width 221px
                padding 8px 10px
                left -151px
                top -36px
                .Twitter
                  cursor pointer
                  background-size 14px 11px
                  background-position 0 2px
                  background-color transparent
                .Twitter:hover
                  color #00aced
                .Facebook
                  cursor pointer
                  background-size 9px 16px
                  background-position 3px -1px
                  background-color transparent
                .Facebook:hover
                  color #3b5998
                a
                  background-repeat no-repeat
                  padding-left 20px
                  font-size 0.8em
                  text-decoration none
        .Facebook
          background-color #3b5998
        .Instagram
          background-color #517fa4
        .Twitter
          background-color #00aced


      .gignal-box-footer
        position relative
        //border-top 1px solid border_color
        height: 48px
        margin 0 10px
        word-wrap break-word
        overflow hidden
        padding 5px 0 10px
        line-height: 16px
        font-size: 12px
        font-weight: normal
        color: text_color

        img
          margin-right: 5px

        .gignal-avatar
          width: 48px
          height: 48px
          border 1px solid border_color
          
        .gignal-service-name
          text-transform: capitalize

        .gignal-service
          width: 18px
          height: 18px
          margin-right: 0
          position: absolute
          right: 0
          bottom: 0
          opacity: 0.5

    .gignal-outerbox:hover
      background-color rgba(246,246,246,.7)

    .gignal-owner
      background-color rgba(255,255,255,.7)

      .gignal-text
        color: text_color

      a
        color: action_link_color

      .gignal-box-footer
        color: text_color

      .gignal-service
        display: none
