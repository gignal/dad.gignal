background_color = #fff
action_link_color = #666
text_color = #333
box_shadow = 0 8px 6px -6px black

@import 'index'
@import 'isotope'

#gignal-stream

  .pull-left
    float: left
  .pull-right
    float: right

  .lcase
    text-transform: lowercase

  a, img
    border: none

  #gignal-widget
    background-color: background_color
    font-family: Georgia, Arial, sans-serif;

    .gignal-outerbox
      display: inline-block
      background-color: rgb(239, 239, 241)
      margin: 5px
      margin-bottom: 9px
      -webkit-box-shadow: box_shadow
      -moz-box-shadow: box_shadow
      box-shadow: box_shadow

      a
        color: action_link_color
        text-decoration: none

        &:hover
          text-decoration: underline

      img
        border: none

      hr
        border: 0
        height: 1px
        background: background_color
        margin-bottom: 0

      .gignal-unibox
        position: relative
        padding: 10px
        word-wrap: break-word
        // max-height: 200px
        overflow: hidden
        color: text_color
        text-align: center

        .gignal-image
          height: 185px
          background-size: cover
          background-image: url('../gignal/images/Gignal-G.png')

        .message
          font-family: Georgia, Arial, sans-serif;
          max-height: 200px

        .gignal-box-footer
          margin-top: 145px


      .gignal-box-footer
        position: relative
        //width: 100%
        height: 48px
        //display: inline-block
        word-wrap: break-word
        overflow: hidden
        padding: 10px
        padding-top: 0
        line-height: 16px
        font-size: 12px
        font-weight: normal
        color: text_color

        img
          margin-right: 5px

        .gignal-avatar
          max-width: 48px
          max-height: 48px

        .gignal-service
          width: 18px
          height: 18px
          margin-right: 0
          position: absolute
          right: 0
          bottom: 0
          opacity: 0.5

    .gignal-owner
      background-color: background_color
      -webkit-box-shadow: none
      -moz-box-shadow: none
      box-shadow: none

      .gignal-text
        color: text_color

      a
        color: action_link_color

      .gignal-box-footer
        color: text_color

      .gignal-service
        display: none
